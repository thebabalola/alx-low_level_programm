#include "main.h"

/**
 * _strncpy - copies string
 *
 * @dest: destination.
 * @src: source.
 * @n: amount of bytes from src.
 *
 * Return: the pointer to dest.
 */

char *_strncpy(char *dest, char *src, int n)
{
	int i;

	for (i = 0; i < n; i++) {
		if (src[i] != '\0')
			dest[i] = src[i];
		else {
			while (i < n)
				dest[i++] = '\0';
		}
	}

	return dest;
}
