#include "main.h"

/**
 * _strchr - Find the first occurrence of a character in a string.
 *
 * @s: The string to search.
 * @c: The character to locate.
 *
 * Return: Pointer to the first occurrence of character, or NULL if not found.
 */

char *_strchr(char *s, char c)
{
	unsigned int i = 0;

	while (s[i] != '\0')
	{
		if (s[i] == c)
		{
			return (s + i);
		}
		i++;
	}

	if (s[i] == c)
	{
		return (s + i);
	}

	return (NULL);
}
