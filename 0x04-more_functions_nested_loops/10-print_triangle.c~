#include "main.h"

/**
 * print_triangle - This function prints
 * @size: The number of lines in the triangle.
 * Return: No specific return value.
 */

void print_triangle(int size)
{
	int i, j;

	for (i = 0; i < size; i++)
	{
		for (j = 1; j < (size - i); j++)
			_putchar(' ');
		for (j--; j < size; j++)
			_putchar(35);  /* Here, 35 represents the '#' character */.
		if (i < (size - 1))
			_putchar('\n');
	}

	_putchar('\n');
}
